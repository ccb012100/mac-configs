# zsh aliases

alias la='ls -a'
alias lal='ls -al'

alias cls='clear'					# clear screen
alias finder='open .'				# open Finder window in current directory
alias jq='jq -C'					# colorize json
alias n='nano'
alias nano='nano -Palmic -J 80'
alias emacs='emacsclient -n'		# use emacsclient
alias e='emacs'

alias dotzsh='nano ~/.zshrc'		# edit zsh config
alias dotemacs='nano ~/.emacs'		# edit emacs profile
alias srczsh='source ~/.zshrc'		# reload zsh config

# open Slack in dev mode
alias slack='export SLACK_DEVELOPER_MENU=true; open -a /Applications/Slack.app'

## git aliases
alias g='git'
alias gadd='git add .'
alias gb='git branch'
alias gc='git checkout'
alias gm='git commit -m'
alias gs='git status'
alias gl='git log --graph --pretty=format:"%Cred %h %Cgreen %cn %Cblue %ci %Creset"'
